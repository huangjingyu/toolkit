    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>${project.build.directory}/TransLogPuller-1.0-SNAPSHOT.jar</source>
            <outputDirectory>/</outputDirectory>
            <destName>TransLogPuller.jar</destName>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>src/main/resources/TransLogPuller.properties</source>
            <outputDirectory>/</outputDirectory>
            <destName>TransLogPuller.properties</destName>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>src/main/script/trans_log_puller.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>trans_log_puller.sh</destName>
            <fileMode>755</fileMode>
        </file>
